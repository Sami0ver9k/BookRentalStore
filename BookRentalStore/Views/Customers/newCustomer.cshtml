@model BookRentalStore.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "newCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>


<html>

<body>

    @using (Html.BeginForm("Create", "Customers", FormMethod.Post,null))
    { 
        @Html.HiddenFor(m=> m.customer.id)
    <div class="form-group">

      
        
        @Html.LabelFor(m=> m.customer.name)
        @Html.TextAreaFor(m=> m.customer.name,  new { @class="form-control"} )
        @Html.ValidationMessageFor(m=> m.customer.name)

    </div>

   <div class="checkbox">
          <label>
            @Html.CheckBoxFor(m=> m.customer.isSubscribedToNews) Subscription to News
          </label>
        </div>
     
  <div class="form-group">
        
        @Html.LabelFor(m=> m.customer.membershiptype)
        @Html.DropDownListFor(m=> m.customer.membershiptype, new SelectList(Model.membershiptypes, "id", "package"), "select package", new { @class="form-control"} )

    </div>
       
        <button type="submit" class="btn-primary"  >Submit</button>
        
        
        
    }







</body>

</html>

